@model CardManager.Web.Models.Dtos.CardDto

@{
    ViewData["Title"] = "Criar um novo cartão";
}

<div class="d-flex justify-content-center align-items-center" style="height: 80vh;">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title">Criar um novo cartão</h2>

            <form asp-controller="Card" asp-action="CreateCard" method="post">
                <div class="mb-3">
                    <label for="cardSerial" class="form-label">Número do serial:</label>
                    <input asp-for="CardSerial" class="form-control" id="cardSerial" placeholder="030000000000000" required/>
                </div>

                <div class="mb-3">
                    <label for="cardOwnerName" class="form-label">Nome do colaborador:</label>
                    <input asp-for="CardOwnerName" class="form-control" id="cardOwnerName" placeholder="Digite o nome completo" required/>
                </div>

                <div class="mb-3">
                    <label for="cardOwnerCpf" class="form-label">CPF do colaborador:</label>
                    <input asp-for="CardOwnerCpf" class="form-control" id="cardOwnerCpf" placeholder="000.000.000-00" required/>
                </div>

                <div class="mb-3">
                    <label for="cardType" class="form-label">Tipo do cartão:</label>
                    <input asp-for="CardType" class="form-control" id="cardType" placeholder="(Despesas ou Incentivo)" required/>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">Criar Cartão</button>
                    <a class="btn btn-danger" href="/">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>