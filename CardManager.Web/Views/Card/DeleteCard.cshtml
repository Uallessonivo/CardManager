@model CardManager.Web.Models.Dtos.CardDto

@{
    ViewData["Title"] = "Apagar cartão";
}

<div class="d-flex justify-content-center align-items-center" style="height: 80vh;">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title">Apagar cartão</h2>
            
            <form asp-controller="Card" asp-action="DeleteCard" method="post">
                <div class="mb-3">
                    <label for="cardSerial" class="form-label">Digite o serial do cartão:</label>
                    <input asp-for="CardSerial" class="form-control" id="cardSerial" placeholder="030000000000000" required/>
                </div>
                
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-dark">Apagar cartão</button>
                    <a class="btn btn-danger" href="/">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>
