@model CardManager.Web.Models.Dtos.CardDto

@{
    ViewData["Title"] = "Gerar relatório de cartões";
}

<div class="d-flex justify-content-center align-items-center" style="height: 80vh;">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title">Gerar arquivo CSV</h2>

            <form asp-controller="Card" asp-action="GenerateFile" method="post">
                <div class="mb-3">
                    <label for="cardType" class="form-label">Tipo de cartão:</label>
                    <input asp-for="CardType" class="form-control" id="cardType" placeholder="(Despesas ou Incentivo)" required />
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">Gerar arquivo</button>
                    <a class="btn btn-danger" href="/">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>
