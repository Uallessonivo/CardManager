@{
    ViewData["Title"] = "Limpar a base de dados";
}

<div class="d-flex justify-content-center align-items-center" style="height: 80vh;">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title">Limpar a base de cartões</h2>

            <form asp-controller="Card" asp-action="DeleteCardBaseConfirmation" method="post">
                <p>Tem certeza de que deseja apagar todos os cartões da base?</p>
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-dark">Sim, apagar</button>
                    <a class="btn btn-danger" href="/">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>